<h1>NEW GAME:</h1>

  <div class="container">
    <% @letters.each do |lett| %>
      <p class="letter"> <%= lett %></p>
    <% end %>
  </div>

  <br>
  <br>
  <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="word_choice">What is the longest word you can find:</label>
      <br>
      <input type="text" name="word_choice">
      <input type="hidden" name="letters" value=<%= @letters.join("") %>>
      <input type="submit" value="Submit!">
  </form>
